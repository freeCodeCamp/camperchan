// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

model histories {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  v       Int?   @map("__v") @ignore
  userId  String
  bans    Int    @default(0)
  kicks   Int    @default(0)
  mutes   Int    @default(0)
  warns   Int    @default(0)
  unbans  Int    @default(0)
  unmutes Int    @default(0)

  @@unique([userId], map: "userId_1")
}

model levels {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  v                Int?     @map("__v") @ignore
  userId           String
  userTag          String   @default("")
  points           Int      @default(0)
  level            Int      @default(0)
  lastSeen         DateTime @default(now())
  cooldown         Int      @default(0)
  avatar           String   @default("")
  backgroundColour String   @default("")
  backgroundImage  String   @default("")
  colour           String   @default("")
  learnEmail       String   @default("")
  badges           String[] @default([])
  levelAlerts      Boolean  @default(true)
  @@unique([userId], map: "userId_1")
}

model messages {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userId   String
  userTag  String @default("")
  messages Int    @default(0)

  @@unique([userId], map: "userId_1")
}

model supporters {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @unique
  email  String @unique
}

model authors {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @unique
  hashnodeUsername  String @unique
}
